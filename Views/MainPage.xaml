<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GearInsight.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Entry x:Name="Charactername"
                   Placeholder="Skriv din karaktärs namn"
                   HorizontalOptions="Center" ></Entry>
            
            <Entry x:Name="Realm"
                   Placeholder="Skriv din server"
                   
                   HorizontalOptions="Center" ></Entry>

            <Button
                x:Name="FindCharacter"
                Text="Search Character"
                
                
                Clicked="FindCharacter_Clicked"
                
                HorizontalOptions="Center" />
            <Button
                x:Name="CounterClicked"                
                Clicked="CounterClicked_Clicked"
                HorizontalOptions="Center"
                Text="Popup knapp"
                
                ></Button>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
