    <AbsoluteLayout
        VerticalOptions="FillAndExpand" 
        HorizontalOptions="FillAndExpand">
        <Image AbsoluteLayout.LayoutFlags="All"
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
               Source="{Binding BackgroundImage}"
               Aspect="AspectFill"/>
        <VerticalStackLayout>
            <Grid>
            <Grid 
              ColumnDefinitions="50, 50, 50, 10, 100"   
              RowDefinitions="50, 50, 50, 20, 20, 20, 20, 20"
              
              Padding="100">

                <Image 
                    
                    Source="{Binding Head.Icon}"
                       x:Name="HeadImage"
                       Grid.Column="0"
                       Grid.Row="0"                       
                       Aspect="AspectFill"
                       HorizontalOptions="Start">


                </Image>
                <Image Source="{Binding Head.Icon}"
                       x:Name="omm"
                       Grid.Column="0"
                       Grid.Row="1"                       
                       Aspect="AspectFill"
                       HorizontalOptions="Start">


                </Image>
                <Image Source="{Binding Head.Icon}"
                       x:Name="om"
                       Grid.Column="0"
                       Grid.Row="2"                       
                       Aspect="AspectFill"
                       HorizontalOptions="Start">


                </Image>

            </Grid>

            </Grid>


        </VerticalStackLayout>

    </AbsoluteLayout>
    
    
