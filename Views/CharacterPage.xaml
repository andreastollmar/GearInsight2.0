<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:GearInsight.Models"
             x:Class="GearInsight.Views.CharacterPage"
             Title="CharacterPage"             
             BackgroundImageSource="warrior.jpg">


    <FlexLayout Direction="Column">

        <Label Text="{Binding CharacterName}" TextColor="Purple" FontSize="48" HorizontalTextAlignment="Center" Padding="10"></Label>
        <FlexLayout FlexLayout.Grow="1" Direction="Row">
            <Grid ColumnDefinitions="200, *, 2*, *, 200">
                <Grid Grid.Column="0" RowDefinitions="*, *, *, *" ColumnDefinitions="150">
                    <Label Grid.Row="3"
                              Text="Mythic plus raiting"
                              TextColor="AliceBlue"
                              >
                    </Label>



                </Grid>
                <VerticalStackLayout Grid.Column="1"
                
                >


                    <Grid Grid.Column="1" RowDefinitions=".125*, .125*, .125*, .125*, .125*, .125*, .125*, .125*"
                      ColumnDefinitions="*, 6*"
                      RowSpacing="20"
                      Margin="5"
                      Padding="10">

                        <!--Head-->
                        <Frame Padding="0 , 0" Margin="0, 0, 0, 1" BorderColor="Purple" CornerRadius="4" Grid.Row="0" Grid.Column="0">
                            <Image Source="{Binding Head.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit" ></Image>
                        </Frame>
                        <Grid Grid.Column="1" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Head.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                           FontAttributes="Bold"
                           TextColor="#cf4dce"
                           HorizontalOptions="Start"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                           FontSize="12"
                           TextColor="#cf4dce"
                           HorizontalOptions="Start"></Label>
                        </Grid>

                        <!--Neck-->
                        <Frame Padding="0 , 0" Margin="0, 0, 0, 2" BorderColor="Purple" CornerRadius="4" Grid.Row="1" Grid.Column="0">
                            <Image Source="{Binding Neck.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="1" Grid.Row="1" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Neck.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                                   TextColor="#cf4dce"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                                   TextColor="#cf4dce"
                           FontSize="12"></Label>
                        </Grid>

                        <!--Shoulder-->
                        <Frame Padding="0 , 0" Margin="0, 0, 0, 2" BorderColor="Purple" CornerRadius="4" Grid.Row="2" Grid.Column="0">
                            <Image Source="{Binding Shoulder.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="1" Grid.Row="2" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Shoulder.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                                   TextColor="#cf4dce"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                                   TextColor="#cf4dce"
                           FontSize="12"></Label>
                        </Grid>

                        <!--Back-->
                        <Frame Padding="0 , 0" Margin="0, 1, 0, 2" BorderColor="Purple" CornerRadius="4" Grid.Row="3" Grid.Column="0">
                            <Image Source="{Binding Back.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="1" Grid.Row="3" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Back.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                                   TextColor="#cf4dce"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                                   TextColor="#cf4dce"
                           FontSize="12"></Label>
                        </Grid>

                        <!--Chest-->
                        <Frame Padding="0 , 0" Margin="0, 1, 0, 2" BorderColor="Purple" CornerRadius="4" Grid.Row="4" Grid.Column="0">
                            <Image Source="{Binding Chest.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="1" Grid.Row="4" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Chest.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                                   TextColor="#cf4dce"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                                   TextColor="#cf4dce"
                           FontSize="12"></Label>
                        </Grid>

                        <!--Shirt-->
                        <Frame Padding="0 , 0" Margin="0, 5, 0, 0" BorderColor="Purple" CornerRadius="4" Grid.Row="5" Grid.Column="0">
                            <Image Source="{Binding Shirt.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="1" Grid.Row="5" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Shirt.ItemName}"
                           Grid.Row="0"
                           TextColor="#cf4dce"
                           FontSize="16"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                           TextColor="#cf4dce"
                           FontSize="12"></Label>
                        </Grid>

                        <!--Tabard-->
                        <Frame Padding="0 , 0" Margin="0, 5, 1, 0" BorderColor="Purple" CornerRadius="4" Grid.Row="6" Grid.Column="0">
                            <Image Source="{Binding Tabard.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="1" Grid.Row="6" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Tabard.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                           TextColor="#cf4dce"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                           TextColor="#cf4dce"
                           FontSize="12"></Label>
                        </Grid>

                        <!--Wrist-->
                        <Frame Padding="0 , 0" Margin="0, 1, 0, 2" BorderColor="Purple" CornerRadius="4" Grid.Row="7" Grid.Column="0">
                            <Image Source="{Binding Wrist.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="1" Grid.Row="7" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Wrist.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                           TextColor="#cf4dce"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                           TextColor="#cf4dce"
                           FontSize="12"></Label>
                        </Grid>



                    </Grid>


                </VerticalStackLayout>

                <VerticalStackLayout FlexLayout.Grow="1" Grid.Column="2">
                    <Grid ColumnDefinitions="2*, *, 2*"
                          RowDefinitions="75, 75, 75, 75, 75, 75, 75, 75"
                          RowSpacing="20"
                          ColumnSpacing="10"
                          Margin="5">
                        
                            <Grid Grid.Column="0" Grid.Row="7" RowDefinitions="*, *" Padding="5" RowSpacing="2">

                                <Label Text="{Binding Mainhand.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                                       HorizontalOptions="End"
                           TextColor="#cf4dce"
                           FontAttributes="Bold"></Label>

                                <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                                       HorizontalOptions="End"
                           TextColor="#cf4dce"
                           FontSize="12"></Label>
                            </Grid>



                            <Grid Grid.Column="2" Grid.Row="7" RowDefinitions="2*, *" Padding="5" RowSpacing="2">

                                <Label Text="{Binding Offhand.ItemName}"
                                   
                           Grid.Row="0"
                           FontSize="16"
                           TextColor="#cf4dce"
                           HorizontalOptions="Start"
                           FontAttributes="Bold"></Label>

                                <Label Text="Ilvl och enchantments" 
                                   HorizontalOptions="Start"
                           Grid.Row="1"
                           TextColor="#cf4dce"
                           FontSize="12"></Label>
                            </Grid>




                        <Grid Grid.Column="1" Grid.Row="7" ColumnDefinitions="*,*" ColumnSpacing="2">
                        <!--MainHand-->
                        <Frame Padding="0 , 0" Margin="6, 10, 14, 13" BorderColor="Purple" CornerRadius="4"  Grid.Column="0" >
                            <Image Source="{Binding Mainhand.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                                   
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <!--OffHand-->
                        <Frame Padding="0, 0" Margin="6, 10, 14, 13" CornerRadius="4" BorderColor="Purple"  Grid.Column="1">
                            <Image Source="{Binding Offhand.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>
                        </Grid>
                        <Image Source="{Binding BackgroundImage}" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="1000" WidthRequest="1000" Grid.ColumnSpan="3" Grid.RowSpan="8"></Image>
                    </Grid>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="3" HorizontalOptions="End"
                >

                    <Grid RowDefinitions=".125*, .125*, .125*, .125*, .125*, .125*, .125*, .125*"
                      ColumnDefinitions="6*, *"
                      RowSpacing="20"
                      Margin="5"
                      Padding="10">

                        <!--Hands-->
                        <Frame Padding="0 , 0" Margin="0, 0, 0, 1" BorderColor="Purple" CornerRadius="4" Grid.Column="1">
                            <Image Source="{Binding Hands.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>
                        <Grid Grid.Column="0" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Hands.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                                   TextColor="#cf4dce"
                           HorizontalOptions="End"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                                   TextColor="#cf4dce"
                           HorizontalOptions="End"
                           FontSize="12"></Label>
                        </Grid>

                        <!--Waist-->
                        <Frame Padding="0 , 0" Margin="0, 1, 0, 2" BorderColor="Purple" CornerRadius="4" Grid.Row="1" Grid.Column="1">
                            <Image Source="{Binding Waist.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="0" Grid.Row="1" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Waist.ItemName}"
                           Grid.Row="0"
                           FontSize="16"
                                   TextColor="#cf4dce"
                           HorizontalOptions="End"
                           FontAttributes="Bold"></Label>

                            <Label Text="Ilvl och enchantments"                         
                           Grid.Row="1"
                           HorizontalOptions="End"
                                   TextColor="#cf4dce"
                           FontSize="12"></Label>
                        </Grid>

                        <!--Legs-->
                        <Frame Padding="0 , 0" Margin="0, 1, 0, 2" BorderColor="Purple" CornerRadius="4" Grid.Row="2" Grid.Column="1">
                            <Image Source="{Binding Legs.Icon}"
                                   HeightRequest="50"
                                   WidthRequest="50"
                           Aspect="AspectFit"></Image>
                        </Frame>

                        <Grid Grid.Column="0" Grid.Row="2" RowDefinitions="2*, *" Padding="5" RowSpacing="4">

                            <Label Text="{Binding Legs.ItemName}"
                           Grid.Row="0"
